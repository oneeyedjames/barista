!!! 5
%html
	%head
		%title Barista Framework

		%link{ :rel => 'stylesheet', :href => '../../lib/fontawesome/css/font-awesome.min.css' }
		%link{ :rel => 'stylesheet', :href => '../css/barista.css' }

		%script{ :src => '../../lib/jquery/jquery.min.js' }
		%script{ :src => '../js/barista.js' }

		:css
			h3.section { margin-top: 0; border-bottom: 1px solid #999; }
	%body
		%header.navbar
			.wrapper
				.icon
					%a Home
				%ul.nav
					%li
						%a{ 'data-action' => 'menu' }
							First Item
							%i.caret
						%ul
							%li
								%a First Sub-Item
							%li
								%a Second Sub-Item
							%li
								%a Third Sub-Item
					%li
						%a Second Item
				%ul.nav.right
					%li
						%a Special Item
		%article.wrapper
			= render '_typography'
			= render '_buttons'
			= render '_labels'
			= render '_badges'
			= render '_tables'
			= render '_lists'
			= render '_cards'
			= render '_modal'
			= render '_forms'
			= render '_tooltips'
